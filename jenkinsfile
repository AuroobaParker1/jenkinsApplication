pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Checkout your source code from repository
                checkout scm
                
                // Build your application (replace 'your-build-command' with your actual build command)
                script {
                    if (isUnix()) {
                        sh 'docker build -t auroobaparker/jenkins-application:latest .'
                    } else {
                        bat 'docker build -t auroobaparker/jenkins-application:latest .'
                    }
                }
            }
        }
    
        
        stage('Deploy') {
            steps {
                // Deploy your application to Kubernetes
                script {
                    if (isUnix()) {
                        sh 'kubectl config set-cluster minikube --server=https://172.27.96.179:8443'
                        sh 'kubectl config set-context minikube --cluster=minikube --user=user'
                        sh 'kubectl config use-context minikube'
                        sh 'kubectl apply -f kubernetes/deployment.yaml --context minikube'
                        sh 'kubectl apply -f kubernetes/service.yaml --context minikube'
                        sh 'kubectl rollout status deployment/jenkins-deployment --context minikube'
                    } else {
                        bat 'kubectl config set-cluster minikube --server=https://172.27.96.179:8443'
                        bat 'kubectl config set-context minikube --cluster=minikube --user=user'
                        bat 'kubectl config use-context minikube'
                        bat 'kubectl apply -f kubernetes/deployment.yaml --context minikube'
                        bat 'kubectl apply -f kubernetes/service.yaml --context minikube'
                        bat 'kubectl rollout status deployment/jenkins-deployment --context minikube'
                    }
                }
            }
        }
    }
}
